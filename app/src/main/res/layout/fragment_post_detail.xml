<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/universal_margin">

    <!--PLACEHOLDER IMAGE-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:id="@+id/view_layout">



            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/title_colour"
                android:textSize="19sp"
                android:textStyle="bold"

                android:gravity="center"
                android:paddingTop="5dp"

                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/text_time_stamp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/subtitle_colour"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_below="@id/title_text"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/detail_image"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:paddingTop="10dp"
                android:layout_below="@id/text_time_stamp"
                android:adjustViewBounds="true"
                android:layout_alignBaseline="@+id/text_time_stamp" />

            <TextView
                android:id="@+id/content_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/subtitle_colour"
                android:textSize="14sp"
                android:paddingTop="10dp"

                android:layout_below="@+id/detail_image"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>