<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/white">

    <TextView
        android:id="@+id/text_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/title_default_text"
        android:textSize="19sp"
        android:textColor="@color/title_colour"
        android:textStyle="bold"
        android:layout_alignParentTop="false"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/text_time_stamp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/subtitle_colour"
        android:textSize="10sp"
        android:textStyle="italic"

        android:layout_below="@id/text_title"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/index_picture"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:paddingTop="10dp"
        android:layout_below="@id/text_time_stamp"
        android:adjustViewBounds="true"

        android:contentDescription="index_image">
    </ImageView>

</RelativeLayout>