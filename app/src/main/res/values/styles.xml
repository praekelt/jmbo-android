<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#8c31a8</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/play_pause_toggle_background</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="@android:style/Theme.Holo">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

    <style name="Widget.CompoundButton.CheckBox" parent="android:Widget">
        <item name="android:button">@drawable/checkbox_box_color</item>
    </style>
    <style name="checkBox" parent="@android:style/Theme.Holo">
        <item name="android:button">@drawable/checkbox_box_color</item>
        <item name="android:checkMark">@drawable/abc_btn_check_material</item>
    </style>

</resources>
